<h1> Articles</h1>
<ul>
  <%@articles.each do |article| %>
  <li> <%= link_to article.title, article_path(article)%> - <%= article.content %>
  <%= link_to "Delete",
  article_path(article),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
    <%end%>
     <%= link_to "Add a new Article", "/articles/new"%>
</ul>
